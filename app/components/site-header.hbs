<div class='flex pa1 justify-between nowrap orange'>
  <div class='flex flex-fixed black'>
    <div class='fw7 mr1'>Leit damn it</div>
    {{#link-to 'boxes' class='ml1 no-underline black'}}list{{/link-to}}
    {{#if userLoggedIn}}
      <div class='flex'>
        <div class='ml1'>|</div>
        {{#link-to 'box-create' class='ml1 no-underline black'}}create{{/link-to}}
      </div>
    {{/if}}
  </div>
  <div class='flex flex-fixed'>
    {{#if userLoggedIn}}
      <div class='ml1 pointer black' {{action 'logout'}}>
        logout
      </div>
    {{else}}
      {{#link-to 'login' class='ml1 no-underline black'}}login{{/link-to}}
    {{/if}}
  </div>
</div>